<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>Grounds List</h1>

    <% for (let ground of grounds){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-2">
                <%if(ground.images.length) {%>
                <img class="img-fluid" alt="" src="<%=ground.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dbep76csk/image/upload/v1616173095/GroundRating/jumczaym95detlcrj7pq.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= ground.title %> </h5>

                    <p class="card-text"><%= ground.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= ground.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/grounds/<%=ground._id%>">View <%=ground.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const grounds = { features: <%- JSON.stringify(grounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>